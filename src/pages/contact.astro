---
import Page from "../layouts/Page.astro";
---

<Page title="Contact Us" description="Contact Us">
  <div class="w-full max-w-2xl mx-auto">
    <h1 class="text-2xl sm:text-3xl lg:text-4xl text-jlp-burnt mb-6">Contact</h1>
    <p class="mb-6 lg:mb-10 italic text-sm sm:text-base text-gray-600">
      Fields marked with an <span class="text-jlp-burnt">*</span> are required.
    </p>
    <form action="https://formspree.io/f/xnnnwkab" method="POST" class="pt-4 lg:pt-6 pb-8 mb-4">
      <div class="mb-4 lg:mb-6">
        <label class="block text-gray-700 mb-2 text-sm sm:text-base font-medium" for="name">
          Name
          <span class="font-bold text-jlp-burnt">*</span>
        </label>
        <input class="shadow appearance-none border rounded w-full py-3 lg:py-4 px-3 lg:px-4 text-gray-700 text-sm sm:text-base focus:outline-none focus:shadow-outline focus:border-jlp-burnt transition-colors" id="name" name="name" placeholder="Your name" required />
      </div>
      <div class="mb-4 lg:mb-6">
        <label class="block text-gray-700 mb-2 text-sm sm:text-base font-medium" for="email">
          Email
          <span class="text-jlp-burnt">*</span>
        </label>
        <input class="shadow appearance-none border rounded w-full py-3 lg:py-4 px-3 lg:px-4 text-gray-700 text-sm sm:text-base focus:outline-none focus:shadow-outline focus:border-jlp-burnt transition-colors" id="email" name="email" type="email" placeholder="your.email@example.com" required />
      </div>
      <div class="mb-6 lg:mb-8">
        <label class="block text-gray-700 mb-2 text-sm sm:text-base font-medium" for="message">
          Message
          <span class="text-jlp-burnt">*</span>
        </label>
        <textarea class="shadow appearance-none border rounded w-full py-3 lg:py-4 px-3 lg:px-4 text-gray-700 text-sm sm:text-base mb-3 focus:outline-none focus:shadow-outline focus:border-jlp-burnt transition-colors resize-vertical" id="message" rows="6" name="message" placeholder="Your message..." required></textarea>
      </div>
      <div class="flex items-center justify-start">
        <button class="bg-jlp-burnt hover:bg-jlp-burnt-light text-jlp-white font-medium py-3 lg:py-4 px-6 lg:px-8 rounded text-sm sm:text-base focus:outline-none focus:shadow-outline transition-colors" type="submit"> Send Message </button>
      </div>
    </form>
  </div>
</Page>
